<?php
header("Content-type: text/html; charset= utf-8;");
class MyMobile{		//Creating my phone;
    public $model = "HM3";
    public $manufacturer = "XiaoMi";
    public $camera_definition = "800M_pixel";
    public $screen_definition = "1024x768_pixel";
    public $color = "golden";
    public $battery_capacity = "4000mah";
    public $price = "RMB 700";
    public $processor_brand = "Qualcomm";
    
    public function Power_on() {
        echo "hello! Mobile phone powered on. 开机了<br>";
    }
    public function Power_off() {
        echo "Bye! Mobile phone powered off.";
    }
    public function Take_photo() {
        echo "Taking a photo...";
    }
    public function Browse_files() {
        echo "Now ready to browse files."; //浏览文件
    }
    public function Light_on() {
        echo "Flashlight is on.";
    }
    public function Play_games() {
        echo "hello! Mobile phone game started.";
    }
    public function TakeDownTeachers() {
        echo "Ready to take down teachers.";
    }
    public function Kick_ass() {
        echo "Kicking tutor's ass...";
    }
    public function Being_dumb() {
        echo "I am an idiot.";
    }
    public function Refrain_suicide() {
        echo "I am not going to give up.";
    }
    public function getHot() {
        echo "I am wearing a bikini.";
    }
    public function SendMsg() {
        echo $this->model;        //发送短信
    }
} //END OF CLASS;

$MyObject1= new MyMobile();
var_dump($MyObject1);
$MyObject1->Power_on();
$MyObject1->SendMsg();


?>
