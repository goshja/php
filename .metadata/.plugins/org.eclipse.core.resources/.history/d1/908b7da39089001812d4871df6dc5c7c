<?php
    /**
     * 自动化初始化缓存
     * access public
     * @author php
     *@param string $usrnm 用户名
     *@return User;
     */
	class User {
		public $username;
		public $password;
		public $register_time;
		public $email;
		public $rows;
	    private $age = 18;
	    protected $money = "shit";

		function login() {
			//TODO:登录过程。。。
		}
		function __construct($usrnm) {	//构造函数 赋值给user
			$this->username = $usrnm;
			echo $this->username;
		}
		
		function __destruct() {
		    //析构函数
		}
		
		public function setArr($arr) {
		    $this->rows = $arr;
		}
		
		public function getArr() {
		    var_dump($this->rows);
		}

	} //user对象结束
	
	class vip extends User {
	    public function showMoney() {
	        echo ($this->money);
	    }
	}
	
	$u = new User("John Smith");
	$u->setArr([5,6,3,"asdfasdf"]);
	$u->getArr();
	//echo $u->age;
	$svip = new vip("super man");
	echo $svip->showMoney;
?>
